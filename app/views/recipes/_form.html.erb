<div class='section'>
  <%= form_with model: @recipe do |f| %>
  <div class='field'>
    <div class='control'>
      <%= f.text_field :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, placeholder: "Name" %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.text_field :preparation_time, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' },placeholder: "Preparatioin Time" %>
    </div>
  </div>
   <div class='field'>
    <div class='control'>
      <%= f.text_field :cooking_time, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, placeholder: "Cooking Time" %>
    </div>
  </div>
   <div class='field'>
    <div class='control'>
      <%= f.text_field :description, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, placeholder: "Description" %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.text_field :public, as: :boolean, placeholder: "Public" %>
    </div>
  </div>
  <div>
    <%= f.button :submit, class: 'button is-primary' %>
  </div>
  <% end %>
</div>
