<div>
  <div>
    <p>Shopping List</p>
    <div>
      <div><p>Amount of food items to buy: <span>&nbsp;<%= @foods.length %></span></p></div>
      <div><p>Total value of food needed:<span>&nbsp;$<%= @total %></span></p></div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.quantity %></td>
            <td>$<%= food.price * food.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
